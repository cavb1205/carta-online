---
const { nombre, descripcion, precio, imagen } = Astro.props;
---

<div class="border border-slate-400 shadow-xl max-w-xl md:w-80 rounded-xl overflow-hidden transition-transform duration-300 transform hover:scale-105">
    <img src={`/images/${imagen}`} alt={nombre} class="w-full h-40 object-cover rounded-t-xl" />
    <div class="mx-4 my-4">
        <h2 class="text-primary font-bold text-xl capitalize">{nombre}</h2>
        <p class="text-primary text-sm">{descripcion}</p>
    </div>
    <button class="w-60 h-10 mx-auto flex items-center justify-center mb-2 text-white font-bold py-2 bg-pink-500 hover:opacity-75 rounded-full text-center">
        {precio}
    </button>
</div>
